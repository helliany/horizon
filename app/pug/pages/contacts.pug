                                    a(href="#")
                                        img(src="img/contacts/vk2.png", alt="Vkontakte")
                                li.contact__social
                                    a(href="#")
                                        img(src="img/contacts/facebook-logo.png", alt="Facebook")
                        .contacts__img
                            img(src="img/contacts/call.png", alt="Call")
                            
                    .contacts-wrapper
