  include ../modules/head

  body

    // begin wrapper
    .wrapper

      include ../modules/header

      // begin page
      main

        .container
        
            // begin breadcrumbs 
            .breadcrumbs
                ul.breadcrumbs__list
                    li.breadcrumbs__item
